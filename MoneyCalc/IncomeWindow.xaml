<Window x:Class="MoneyCalc.IncomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyCalc"
        mc:Ignorable="d"
        Title="Доход" Height="300" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="207*"/>
        </Grid.RowDefinitions>
        <WrapPanel Name="categoriesPanel" VerticalAlignment="Top" Height="176" Grid.Row="1" Margin="0,31,0,0"/>
        <TextBox Name="incomeTextBox" TextWrapping="Wrap" Height="31" VerticalAlignment="Top" Margin="0,41,0,0"/>
        <Label Content="Выберите категорию дохода" Margin="0,2,0,0" VerticalAlignment="Top" Height="31" Grid.Row="1"/>
        <Label Content="Введите доход" Margin="0,5,0,0" Height="36" VerticalAlignment="Top"/>
    </Grid>
</Window>
