<Window x:Class="MoneyCalc.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyCalc"
        mc:Ignorable="d"
        Title="Add" Height="115" Width="180"  ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="31*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите название категории" HorizontalAlignment="Center"/>
        <TextBox Name="AddCategoryTextBox" Text="" Grid.Row="1" HorizontalAlignment="Center" Height="27" TextWrapping="Wrap" VerticalAlignment="Center" Width="134"/>
        <Button Name="AddButton" Content="Добавить" IsDefault="True" HorizontalAlignment="Center" Grid.Row="2" Height="24" VerticalAlignment="Center" Click="AddButton_Click" Width="56"/>

    </Grid>
</Window>
