<Window x:Class="BudgetManager.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Добавить" Height="110" Width="180" ResizeMode="NoResize" Background="LightSkyBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите название категории" HorizontalAlignment="Center"/>
        <TextBox Name="AddCategoryTextBox" MaxLength="12" Grid.Row="1" Height="20" Width="140" GotFocus="AddCategoryTextBox_OnGotFocus"/>
        <Button Name="AddButton" Content="Добавить" IsDefault="True" Grid.Row="2" Height="24" Click="AddButton_Click" Width="56"/>
    </Grid>
</Window>

