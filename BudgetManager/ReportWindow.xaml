<Window x:Class="BudgetManager.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetManager"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Отчёт" Height="300" Width="460" ResizeMode="NoResize">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="178*"/>
            <RowDefinition Height="39*"/>
        </Grid.RowDefinitions>
        <ListBox Name="CategoriesListBox" Grid.RowSpan="3" Grid.Column="0" Margin="10" SelectionMode="Multiple"></ListBox>
        <TextBlock Grid.Row="0" TextWrapping="Wrap" Grid.Column="1" Style="{StaticResource DefaultTextBlockStyle}" VerticalAlignment="Center" Width="80" Margin="10,0,0,0" HorizontalAlignment="Left">Выберите период</TextBlock>
        <DatePicker Name="StartPeriod" SelectedDate="{x:Static sys:DateTime.Now}" Grid.Row="0" HorizontalAlignment="Left" Height="25" Margin="89,0,0,0" VerticalAlignment="Center" Width="100" Grid.Column="1"/>
        <DatePicker Name="EndPeriod" SelectedDate="{x:Static sys:DateTime.Now}" Grid.Row="0" HorizontalAlignment="Left" Height="25" Margin="201,0,0,0" VerticalAlignment="Center" Width="100" Grid.Column="1"/>
        <DataGrid Name="DataGrid" Margin="5" Grid.Row="1" Grid.Column="1"></DataGrid>
        <Button Name="ShowButton" Grid.Row="2" Content="Показать" Click="ShowButton_Click" Grid.Column="1" Margin="5"></Button>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="190,12,0,0" Style="{StaticResource DefaultTextBlockStyle}" VerticalAlignment="Top" Width="10" Height="18">&#8212;</TextBlock>
    </Grid>
</Window>

